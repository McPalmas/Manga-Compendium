<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="345dp"
   >

    <ImageView
        android:id="@+id/imagerow2"
        android:layout_width="190dp"
        android:layout_height="276dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/manga_no_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleRowSearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titolo"
        android:textColor="@color/darkGrey"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imagerow2"
        app:layout_constraintTop_toBottomOf="@id/imagerow2" />

    <TextView
        android:id="@+id/authorRowSearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autore"
        android:textColor="@color/darkGrey"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleRowSearch2"
        app:layout_constraintTop_toBottomOf="@+id/titleRowSearch2" />


</androidx.constraintlayout.widget.ConstraintLayout>
