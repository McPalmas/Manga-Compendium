<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpForum"
    android:background="@color/white">

    <View
        android:id="@+id/topViewHelpForum"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHelpForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="FORUM"
        android:textColor="#FFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/backHelpForum"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="@+id/topViewHelpForum"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/titleHelpForum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Come creare una nuova discussione/ come scrivere in una discussione"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:textSize="30dp"
                app:layout_constraintWidth_percent="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/helpForumAnswer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="1) E' possibile creare una nuova discussione attraverso il tasto rosso situato in basso a destra"
                android:textColor="@color/darkGrey"
                android:textSize="20dp"
                app:layout_constraintWidth_percent="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleHelpForum"/>

            <ImageView
                android:id="@+id/imageHelpForum1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/aggiungithread"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpForumAnswer"
                app:layout_constraintWidth_percent="0.92" />

            <TextView
                android:id="@+id/helpForumAnswer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="2) Per poter scrivere un nuovo messaggio è necessario partecipare alla discussione, attraverso il tasto apposito mostrato nella figura sottostante  "
                android:textColor="@color/darkGrey"
                android:textSize="20dp"
                app:layout_constraintWidth_percent="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageHelpForum1"/>

            <ImageView
                android:id="@+id/imageHelpForum2"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/partecipa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpForumAnswer2"
                app:layout_constraintWidth_percent="0.92" />

            <TextView
                android:id="@+id/helpForumAnswer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="3) Successivamente apparirà in basso a destra della chat un pulsante rosso che permetterà di poter scrivere un nuovo messaggio nella chat"
                android:textColor="@color/darkGrey"
                android:textSize="20dp"
                app:layout_constraintWidth_percent="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageHelpForum2"/>

            <ImageView
                android:id="@+id/imageHelpForum3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/aggiungi_messaggio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helpForumAnswer3"
                app:layout_constraintWidth_percent="0.92" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>