<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpAddManga"
    android:background="@color/white">

    <View
        android:id="@+id/topViewHelpAddManga"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHelpAddManga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AGGIUNGI MANGA"
        android:textColor="#FFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/backHelpAddManga"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="@+id/topViewHelpAddManga"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/addMangaTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Come eliminare un manga dalla libreria"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:textSize="30dp"
        app:layout_constraintWidth_percent="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/addMangaAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="E' possibile eliminare un manga dalla propria libreria in due modi, il primo consiste nel rimuoverlo dalla sua pagina personale,  stesso funzionamento dell'aggiunta.   Il secondo per mette di rimuoverlo direttamente dalla libreria attraverso il menu a 3 punti presente sul lato destra di ogni manga"
        android:textColor="@color/darkGrey"
        android:textSize="20dp"
        app:layout_constraintWidth_percent="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMangaTitle"/>

    <ImageView
        android:id="@+id/imageAddManga"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/aggiungi_manga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMangaAnswer"
        app:layout_constraintWidth_percent="0.92" />

    <TextView
        android:id="@+id/textChangeState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Una volta aggiunto sarà possibile cambiarne lo stato attraverso il menù a tendina sottostante"
        android:textColor="@color/darkGrey"
        android:textSize="20dp"
        app:layout_constraintWidth_percent="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAddManga"/>

    <ImageView
        android:id="@+id/imageChangeState"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/cambiastato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChangeState"
        app:layout_constraintWidth_percent="0.92" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>