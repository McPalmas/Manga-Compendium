<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/containerLybrary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/borderlist_manga"
        android:paddingEnd="5dp">

        <ImageView
            android:id="@+id/imageRowThread"
            android:layout_width="95dp"
            android:layout_height="115dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/manga_no_image" />

        <TextView
            android:id="@+id/textRowThread"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="20dp"
            android:text="Titolo"
            android:textColor="@color/darkGrey"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageRowThread"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stateThread"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:text="Bo"
            android:textColor="@color/darkGrey"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textRowThread"
            app:layout_constraintTop_toBottomOf="@id/textRowThread" />


        <View
            android:id="@+id/buttonAddThread"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
